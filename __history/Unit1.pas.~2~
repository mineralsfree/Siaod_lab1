{$R *.dfm}

procedure createLevelHead(var head: PLevelList);
begin
  new(head);
  head.Adr := nil;
  head.Inf.wayToNextPoint:='Поздравляем, вы спустились из лифта, осталось не много, пройдите 48 шагов прямо, затем поверните на 45 градусов налево и от свободы вас будет отделять 50м'
end;
procedure TForm1.Button1Click(Sender: TObject);
var
    Form2: TForm2;
begin
    Application.CreateForm(TForm2,Form2);
    Form2.Caption := 'Какого цвета ваше окружение?';
    Form2.Show;


end;

procedure TForm1.Button2Click(Sender: TObject);
begin
ShowMessage(usercolor);
end;

procedure TForm1.FormCreate(Sender: TObject);
begin
createLevelHead(levelhead);
    button1.Visible:=false;
//AddLevelElement
  //repeat
 // username:=InputBox('Input form','Enter Your name','')
  //until username<>'' ;
