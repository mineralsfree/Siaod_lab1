end;
procedure AddLevelElement(const head: PLevelList; shop: TLevelINF);
var
  temp:PLevelList;
begin
  temp := head;
  while temp^.adr <> nil do
  begin
    temp := temp^.adr;
  end;
  new(temp^.adr);
  temp:=temp^.adr;
  temp^.adr:=nil;
  temp^.Inf := shop;
end;

