type
TFloorINF = record
  level: integer;
  color: string;
  wayToNextPoint: String;
  Identifyer:  String;

end;
PFloorList = ^FloorList;
FloorList = record
  Inf: TFloorINF;
  Adr: PFloorList;
end;


TLevelINF = record
  wayToNextPoint: String;
  Identifyer:  String;

end;
PLevelList = ^LevelList;
LevelList = record
  Inf: TLevelINF;
  Adr: PLevelList;
  Fadr:PFloorList;
end;

